@model Your_Ride.ViewModels.Account.EditRoleVM

<h2>Edit Role</h2>
<form asp-action="EditRole" asp-controller="Account" method="post">
    <div class="mb-3">
        <label for="roleName" class="form-label">Current Role Name</label>
        <input type="text" class="form-control" name="RoleName" value="@Model.RoleName" readonly />
    </div>
    <div class="mb-3">
        <label for="newRoleName" class="form-label">New Role Name</label>
        <input type="text" class="form-control" name="NewRoleName" required />
    </div>
    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a asp-action="UserRoles" class="btn btn-secondary">Cancel</a>
</form>
