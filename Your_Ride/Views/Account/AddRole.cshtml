@model Your_Ride.ViewModels.Account.AddRoleVM

<h2>Add New Role</h2>
<form asp-action="AddRole" asp-controller="Account" method="post">
    <div class="mb-3">
        <label for="roleName" class="form-label">Role Name</label>
        <input type="text" class="form-control" name="RoleName" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Role</button>
    <a asp-action="UserRoles" class="btn btn-secondary">Cancel</a>
</form>
