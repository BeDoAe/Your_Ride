     @model Your_Ride.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
    var profileImg = string.IsNullOrEmpty(Model.Pic_URL) ? "/img/default-profile.png" : Model.Pic_URL;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Model.FirstName @Model.LastName - Profile</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        html, body, h1, h2, h3, h4, h5, h6 {
            font-family: "Roboto", sans-serif;
        }
    </style>
</head>
<body class="w3-light-grey">

    <div class="w3-content w3-margin-top" style="max-width:1400px;">
        <div class="w3-row-padding">
            <!-- Left Column -->
            <div class="w3-third">
                <div class="w3-white w3-text-grey w3-card-4">
                    <div class="w3-display-container">
                        <!-- Profile Image -->
                        <img src="@profileImg" style="width:100%; height:400px; margin-bottom:15px;" alt="Profile Image">

                        <!-- Profile Name -->
                        <div class="w3-display-container w3-padding" style="text-align: center; margin-top: -50px;">
                            <div class="w3-display-bottomleft w3-container w3-text-black" style="background-color: rgba(255, 255, 255, 0.7); padding: 10px; border-radius: 5px;">
                                <h2>@Model.FirstName @Model.LastName</h2>
                            </div>
                        </div>
                    </div>

                    <div class="w3-container">
                        <p><i class="fa fa-id-card fa-fw w3-margin-right w3-large w3-text-teal"></i>@Model.NationalID</p>
                        <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal"></i>@Model.Email</p>
                        <p><i class="fa fa-graduation-cap fa-fw w3-margin-right w3-large w3-text-teal"></i>@(Model.college?.Name ?? "No College")</p>
                        <p><i class="fa fa-users fa-fw w3-margin-right w3-large w3-text-teal"></i>@(Model.batch ?? "No Batch")</p>
                        <p><i class="fa fa-university fa-fw w3-margin-right w3-large w3-text-teal"></i>@(Model.college?.university?.Name ?? "No University")</p>

                        <hr>

                        <p class="w3-large"><b><i class="fa fa-book fa-fw w3-margin-right w3-text-teal"></i>Recent Bookings</b></p>

                        @if (Model.Bookings?.Any() ?? false)
                        {
                            foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookeDateTime).Take(3))
                            {
                                <div class="w3-container w3-padding-small w3-border w3-round w3-light-gray">
                                    <p>
                                        <i class="fa fa-ticket fa-fw w3-margin-right w3-text-teal"></i>
                                        <b>Booking Appointment:</b> @booking.Time?.Appointment?.Date.ToString("yyyy-MM-dd")
                                    </p>
                                    <p>
                                        <i class="fa fa-chair fa-fw w3-margin-right w3-text-teal"></i>
                                        <b>Seat:</b> @(booking.Seat?.SeatLabel ?? "N/A")
                                    </p>
                                    <p>
                                        <i class="fa fa-clock-o fa-fw w3-margin-right w3-text-teal"></i>
                                        <b>Time:</b> @(booking.Time?.TimeOnly.ToString() ?? "N/A")
                                    </p>
                                    <p>
                                        <i class="fa fa-calendar fa-fw w3-margin-right w3-text-teal"></i>
                                        <b>Date of The Book:</b> @booking.BookeDateTime.ToString("yyyy-MM-dd HH:mm")
                                    </p>
                                </div>
                                <br />
                            }
                        }
                        else
                        {
                            <p>No recent bookings found.</p>
                        }

                        <hr>
                       

                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="w3-twothird">
                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-credit-card fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Wallet Balance</h2>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Current Balance:</b></h5>
                        <h6 class="w3-text-teal">@($"${Model.Wallet?.Amount ?? 0.00}")</h6>
                        <hr>
                    </div>
                </div>

                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16">
                        <i class="fa fa-credit-card fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Additional Info:
                    </h2>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Mobile :</b></h5>
                        <h6 class="w3-text-teal">
                            @if (Model.PhoneNumber != null)
                            {
                                <i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal"></i>

                                @Model.PhoneNumber
                            }
                            else
                            {
                                <span class="w3-text-grey">N/A</span>
                            }
                        </h6>
                        <hr>

                        <h5 class="w3-opacity"><b>Gender :</b></h5>
                        <h6 class="w3-text-teal">
                            @if (Model.gender != null)
                            {
                                <i class="fa fa-genderless fa-fw w3-margin-right w3-large w3-text-teal"></i>

                                @Model.gender
                            }
                            else
                            {
                                <span class="w3-text-grey">N/A</span>
                            }
                        </h6>
                        <hr>

                        <h5 class="w3-opacity"><b>Date of Birth :</b></h5>
                        <h6>
                            <p>
                                <i class="fa fa-calendar fa-fw w3-margin-right w3-large w3-text-teal"></i>
                                @if (Model.DateOfBirth.HasValue)
                                {
                                    @Model.DateOfBirth.Value.ToString("yyyy-MM-dd")
                                }
                                else
                                {
                                    <span class="w3-text-grey">N/A</span>
                                }
                            </p>
                        </h6>
                        <hr>
                    </div>
                </div>
                <hr>
                <a asp-action="EditProfile" asp-controller="Account" class="btn btn-warning">Edit Profile</a>
                <br><br>
                <a asp-action="ChangePassword" class="btn btn-warning">Change Password</a>
                <br><br>
                <a asp-action="ChangeFavoriteColor" class="btn btn-info">Change Favorite Color</a>
            </div>
        </div>
    </div>

    @* <footer class="w3-container w3-teal w3-center w3-margin-top">
        <p>Find me on social media.</p>
        <i class="fa fa-facebook-official w3-hover-opacity"></i>
        <i class="fa fa-instagram w3-hover-opacity"></i>
        <i class="fa fa-snapchat w3-hover-opacity"></i>
        <i class="fa fa-twitter w3-hover-opacity"></i>
        <i class="fa fa-linkedin w3-hover-opacity"></i>
        <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank">w3.css</a></p>
    </footer> *@

</body>
</html>
