<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Your Ride</title>

    <!-- CSS Libraries -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/dashboard-custom.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">


    <style>
        /* Hide navbar for admins completely */
        .admin-hide-navbar #navbarContainer {
            display: none;
        }

        /* Ensure the sidebar toggle button is visible */
        .menu-toggle {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1000;
            color: white;
            cursor: pointer;
        }

        /* Remove empty navbar space */
        .admin-hide-navbar .container {
            margin-top: 0;
        }
    </style>
</head>
<body class="@(User.IsInRole("Admin") ? "admin-hide-navbar" : "")">

    @if (User.IsInRole("Admin"))
    {
        <div class="dashboard">
            <!-- Sidebar (Only for Admin) -->
            <div id="sidebarContainer">
                @await Html.PartialAsync("_Sidebar")
            </div>

            <div class="dashboard-app">
              @*   <header class="dashboard-toolbar">
                    <a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a>
                </header> *@

                <div class="dashboard-content">
                    <div class="container">
                        <div class="content-wrapper py-3">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Navbar (Only for Normal Users) -->
        <div id="navbarContainer">
            @await Html.PartialAsync("_Navbar")
        </div>

        <div class="container">
            <div class="content-wrapper py-3">
                @RenderBody()
            </div>
        </div>
    }

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard-custom.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
