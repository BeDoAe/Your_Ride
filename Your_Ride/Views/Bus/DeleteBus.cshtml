@model Your_Ride.ViewModels.BusViewModel.BusVM

<h2 class="text-center my-4 text-danger">Confirm Delete</h2>

<div class="card mx-auto bg-light" style="width: 50%;">
    <div class="card-body">
        <h5 class="card-title text-danger">Are you sure you want to delete this bus?</h5>

        <p class="card-text"><strong>Bus ID:</strong> @Model.Id</p> <!-- ✅ Display ID -->
        <p class="card-text"><strong>Plate Number:</strong> @Model.PlateNumber</p>
        <p class="card-text"><strong>Number of Seats:</strong> @Model.NumberOfSeats</p>
        <p class="card-text"><strong>Driver Name:</strong> @Model.DriverName</p>
        <p class="card-text"><strong>Driver Phone:</strong> @Model.DriverPhone</p>

        <form asp-action="ConfrimDeleteBus" method="post">
            <input type="hidden" asp-for="Id" /> <!-- ✅ Ensures ID is sent in the form -->
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="GetAllBuses" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
