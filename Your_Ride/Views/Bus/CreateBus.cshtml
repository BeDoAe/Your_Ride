@model Your_Ride.ViewModels.BusViewModel.BusVM

<h2 class="text-center my-4">Create New Bus</h2>

<form asp-action="CreateBus" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label class="form-label">Plate Number</label>
        <input asp-for="PlateNumber" placeholder="Plate Number is Not Required" class="form-control" />
        <span asp-validation-for="PlateNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Number of Seats</label>
        <input asp-for="NumberOfSeats" class="form-control" placeholder="Number of Seats are Required"  type="number" />
        <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Driver Name</label>
        <input asp-for="DriverName" placeholder="Driver's Name is Not Required" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Driver Phone</label>
        <input asp-for="DriverPhone" placeholder="Driver's Phone is Not Required" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="GetAllBuses"  class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
