@model Your_Ride.ViewModels.TransactionViewModel.TransactionvM

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2 class="mb-4 text-danger">⚠ Confirm Delete</h2>

<p>Are you sure you want to delete this transaction?</p>

<div class="card border-danger">
    <div class="card-body">
        <p><strong>Transaction ID:</strong> @Model.Id</p>
        <p><strong>Amount:</strong> $@Model.Amount</p>
        <p><strong>Transaction Date:</strong> @Model.TransactionDate.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">🗑 Yes, Delete</button>
    <a asp-action="GetAllTransactions" class="btn btn-secondary mt-3">⬅ Cancel</a>
</form>
