@model Your_Ride.ViewModels.TransactionViewModel.CreateTransactionvM

@{
    ViewData["Title"] = "Create Transaction";
}

<h2 class="mb-4">➕ Create New Transaction</h2>

<form asp-action="CreateTransaction" method="post">
    <div class="mb-3">
        <label class="form-label">User</label>
        <select asp-for="UserId" class="form-control" required>
            <option value="">-- Select User --</option>
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.Id">@user.FirstName @user.LastName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Amount ($)</label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
    </div>

@*     <div class="mb-3">
        <label class="form-label">Transaction Date</label>
        <input asp-for="TransactionDate" type="date" class="form-control" required />
    </div> *@

    <button type="submit" class="btn btn-success">💾 Save Transaction</button>
    <a asp-action="GetAllTransactions" class="btn btn-secondary">⬅ Cancel</a>
</form>
