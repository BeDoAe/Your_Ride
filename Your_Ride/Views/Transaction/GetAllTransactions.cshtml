@model Your_Ride.Helper.PaginatedList<Your_Ride.ViewModels.TransactionViewModel.TransactionvM>

@{
    ViewData["Title"] = "All Transactions";
    string sortColumn = Context.Request.Query["sortColumn"];
    bool ascending = Context.Request.Query["ascending"] == "true";
}

<h2 class="text-center mt-3">Transactions</h2>

<!-- 🔍 Search Form -->
<form method="get" asp-action="GetAllTransactions" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control" placeholder="Search transactions By UserName ! or Date ! or Amount ! ...">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</form>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <!-- Transaction ID -->
            <th>
                <form method="get" asp-action="GetAllTransactions">
                    <input type="hidden" name="sortColumn" value="Id" />
                    <input type="hidden" name="ascending" value="@(sortColumn == "Id" ? !ascending : true)" />
                    <button type="submit" class="btn btn-light">Transaction ID ⬍</button>
                </form>
            </th>

            <!-- User -->
            <th>
                <form method="get" asp-action="GetAllTransactions">
                    <input type="hidden" name="sortColumn" value="User" />
                    <input type="hidden" name="ascending" value="@(sortColumn == "User" ? !ascending : true)" />
                    <button type="submit" class="btn btn-light">User ⬍</button>
                </form>
            </th>

            <!-- Admin -->
            <th>
                <form method="get" asp-action="GetAllTransactions">
                    <input type="hidden" name="sortColumn" value="Admin" />
                    <input type="hidden" name="ascending" value="@(sortColumn == "Admin" ? !ascending : true)" />
                    <button type="submit" class="btn btn-light">Admin ⬍</button>
                </form>
            </th>

            <!-- Amount -->
            <th>
                <form method="get" asp-action="GetAllTransactions">
                    <input type="hidden" name="sortColumn" value="Amount" />
                    <input type="hidden" name="ascending" value="@(sortColumn == "Amount" ? !ascending : true)" />
                    <button type="submit" class="btn btn-light">Amount ⬍</button>
                </form>
            </th>

            <!-- Transaction Date -->
            <th>
                <form method="get" asp-action="GetAllTransactions">
                    <input type="hidden" name="sortColumn" value="Date" />
                    <input type="hidden" name="ascending" value="@(sortColumn == "Date" ? !ascending : true)" />
                    <button type="submit" class="btn btn-light">Transaction Date ⬍</button>
                </form>
            </th>

            <!-- Actions -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Items)
        {
            <tr>
                <td>@transaction.Id</td>

                <!-- User with Image -->
                <td>
                    <img src="@(transaction.User != null && !string.IsNullOrEmpty(transaction.User.Pic_URL) ? transaction.User.Pic_URL : "/img/default-profile.png")"
                         alt="@transaction.User?.FirstName @transaction.User?.LastName"
                         class="user-image" />
                    @transaction.User?.UserName
                </td>

                <!-- Admin with Image -->
                <td>
                    <img src="@(transaction.Admin != null && !string.IsNullOrEmpty(transaction.Admin.Pic_URL) ? transaction.Admin.Pic_URL : "/img/default-profile.png")"
                         alt="@transaction.Admin?.FirstName @transaction.Admin?.LastName"
                         class="admin-image" />
                    @transaction.Admin?.UserName
                </td>

                <!-- Transaction Amount -->
                <td>$@transaction.Amount</td>

                <!-- Transaction Date -->
                <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>

                <!-- Actions -->
                <td>
                    <a asp-action="GetTransactionDetails" asp-route-id="@transaction.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a asp-action="EditTransaction" asp-route-id="@transaction.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="DeleteTransaction" asp-route-id="@transaction.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- 📄 Pagination -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="GetAllTransactions"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-search="@Context.Request.Query["search"]"
                   asp-route-sortColumn="@Context.Request.Query["sortColumn"]"
                   asp-route-ascending="@Context.Request.Query["ascending"]">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" asp-action="GetAllTransactions"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-search="@Context.Request.Query["search"]"
                       asp-route-sortColumn="@Context.Request.Query["sortColumn"]"
                       asp-route-ascending="@Context.Request.Query["ascending"]">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="GetAllTransactions"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-search="@Context.Request.Query["search"]"
                   asp-route-sortColumn="@Context.Request.Query["sortColumn"]"
                   asp-route-ascending="@Context.Request.Query["ascending"]">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}

<a asp-action="CreateTransaction" class="btn btn-success">
    <i class="fas fa-plus-circle"></i> Create New Transaction
</a>

<style>
    .user-image, .admin-image {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-right: 10px;
        object-fit: cover;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.2s;
    }
</style>
