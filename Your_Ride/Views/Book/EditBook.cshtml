@model Your_Ride.ViewModels.BookViewModel.BookVM

@{
    ViewData["Title"] = "Edit Booking";
}

<h2 class="text-center my-4">Edit Booking</h2>

<div class="card shadow-sm p-4">
    <form asp-action="EditBook" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="UserID">User ID</label>
            <input  asp-for="UserID" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="MaxAmount">Max Amount</label>
            <input asp-for="MaxAmount" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="MaxAmount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="GetBookByID" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
