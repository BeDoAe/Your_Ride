@model IEnumerable<Your_Ride.ViewModels.BookViewModel.BookVM>

@{
    ViewData["Title"] = "My Bookings";
}

<h2>📖 My Bookings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>🚌 Time</th>
            <th>💺 Seat</th>
            <th>💰 Fee</th>
            <th>📝 Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Time?.TimeOnly.ToString("hh:mm tt")</td>
                <td>@book.SeatId</td>
                <td>$@book.Time?.Fee</td>
                <td>
                    <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning">✏ Edit</a>
                    <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-danger">❌ Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
