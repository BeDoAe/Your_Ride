@model Your_Ride.ViewModels.BookViewModel.BookVM

<h2>🗑 Cancel Booking</h2>

<p>Are you sure you want to cancel this booking? This action cannot be undone.</p>

<table class="table">
    <tr><th>🆔 Booking ID:</th><td>@Model.Id</td></tr>
    <tr><th>🚌 Bus:</th><td>@Model.Time?.BusID</td></tr>
    <tr><th>💺 Seat:</th><td>@Model.SeatId</td></tr>
</table>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🚨 Confirm Cancel</button>
    <a asp-action="GetAllBooks" class="btn btn-secondary">⬅ Back</a>
</form>
