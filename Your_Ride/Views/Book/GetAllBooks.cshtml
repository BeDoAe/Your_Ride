@model List<Your_Ride.ViewModels.BookViewModel.BookVM>

<h2>📚 All Bookings</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>📖 Book ID</th>
            <th>🕒 Time</th>
            <th>🚌 Bus</th>
            <th>💺 Seat</th>
            <th>👤 User</th>
            <th>🔧 Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Time?.Appointment?.Date</td>
                <td>@book.Time?.BusID</td>
                <td>@book.SeatId</td>
                <td>@book.UserID</td>
                <td>
                    <a asp-action="GetBookByID" asp-route-id="@book.Id" class="btn btn-info" title="View Details">👁</a>
                    <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning" title="Edit Booking">✏</a>
                    <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-danger" title="Cancel Booking">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateBook" class="btn btn-success">➕ Create New Booking</a>
