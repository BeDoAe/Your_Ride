@model List<Your_Ride.ViewModels.BookViewModel.BookVM>

@{
    ViewData["Title"] = "All Bookings";
}

<h2 class="text-center my-4">All Bookings</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Booking ID</th>
            <th>User Name</th>
            <th>Appointment Details</th>
            <th>Max Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.User?.UserName</td>
                <td>@(book.Appointment != null ? $"Appointment on {book.Appointment.Date}" : "No Appointment")</td>
                <td>$@book.MaxAmount</td>
                <td>
                    <a asp-action="GetBookByID" asp-route-id="@book.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateBook" class="btn btn-success mt-3">Create New Booking</a>
