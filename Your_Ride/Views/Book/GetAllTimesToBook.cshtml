    @model IEnumerable<Your_Ride.ViewModels.TimeViewModel.TimeVM>

@{
    ViewData["Title"] = "📅 Available Times for Booking";
}

<h2>📅 Available Times</h2>
<p>🚍 Choose your ride and book instantly! 🎟️</p>

<div id="calendar"></div>

<!-- FullCalendar CSS & JS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
    @foreach (var time in Model)
    {
        <text>
                            {
                                title: "🚌 Trip - @time.TimeOnly",
                                start: "@time.Appointment.Date.ToString("yyyy-MM-dd")",
                                description: "💰 Fee: $@time.Fee \n 🛬 Category: @(time.Category == Your_Ride.ViewModels.TimeViewModel.TimeVM.TripCategory.Arrival ? "Arrival" : "Departure")",
                                id: "@time.Id"
                            },
        </text>
    }
            ],
            eventClick: function(info) {
                window.location.href = '/Book/GetBookTimeByID?id=' + info.event.id;
            }
        });
        calendar.render();
    });
</script>

