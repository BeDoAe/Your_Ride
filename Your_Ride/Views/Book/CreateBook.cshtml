@model Your_Ride.ViewModels.BookViewModel.BookVM

@{
    ViewData["Title"] = "Create Booking";
}

<h2 class="text-center my-4">Create Booking</h2>

<div class="card shadow-sm p-4">
    <form asp-action="CreateBook" method="post">
        <div class="form-group">
            <label asp-for="UserID">User ID</label>
            <input asp-for="UserID" class="form-control" placeholder="Enter User ID" />
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaxAmount">Max Amount</label>
            <input asp-for="MaxAmount" type="number" step="0.01" class="form-control" placeholder="Enter Amount" />
            <span asp-validation-for="MaxAmount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="GetAllBooks" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
