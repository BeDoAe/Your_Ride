@model Your_Ride.ViewModels.WalletViewModel.WalletVM

@{
    ViewData["Title"] = "Update Wallet";
}

<h2>Update Wallet</h2>

<form asp-action="UpdateWallet" method="post">
    <input type="hidden" name="WalletID" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">User Name</label>
        <input type="text" class="form-control" value="@(Model.User != null ? Model.User.UserName : "N/A")" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">User Email</label>
        <input type="text" class="form-control" value="@(Model.User != null ? Model.User.Email : "N/A")" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Wallet Amount</label>
        <input asp-for="Amount" class="form-control" name="amount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="GetWalletByID" asp-route-WalletID="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
