@model Your_Ride.ViewModels.WalletViewModel.WalletVM

@{
    ViewData["Title"] = "Wallet Details";
}

<h2>Wallet Details</h2>

<div class="card">
    <div class="card-header">
        Wallet ID: @Model.Id
    </div>
    <div class="card-body">
        <h5 class="card-title">User: @Model.User.FirstName @Model.User.LastName (@Model.User.UserName)</h5>
        <p class="card-text"><strong>Email:</strong> @Model.User.Email</p>
        <p class="card-text"><strong>Phone:</strong> @Model.User.MobileNumber</p>
        <p class="card-text"><strong>National ID:</strong> @Model.User.NationalID</p>
        <hr>
        <p class="card-text"><strong>Wallet Amount:</strong> $@Model.Amount</p>
        <a asp-action="UpdateWallet" asp-route-WalletID="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="GetAllWallets" class="btn btn-secondary">Back to List</a>
    </div>
</div>
