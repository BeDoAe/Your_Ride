@model Your_Ride.Helper.PaginatedList<Your_Ride.ViewModels.WalletViewModel.WalletVM>

@{
    ViewData["Title"] = "All Wallets";
}

<h2><i class="fas fa-wallet"></i> All Wallets</h2>

<!-- Search Bar -->
<form method="get" action="@Url.Action("GetAllWallets")">
    <div class="input-group mb-3">
        <input type="text" name="search" class="form-control" placeholder="Search by Username or Amount" value="@Context.Request.Query["search"]">
        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Search</button>
    </div>
</form>

<!-- Wallet Table -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>User</th>
            <th>Wallet Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wallet in Model.Items)
        {
            <tr>
                <td>
                    <img src="@(!string.IsNullOrEmpty(wallet.User.Pic_URL) ? wallet.User.Pic_URL : "/img/default-profile.png")"
                         class="rounded-circle" width="40" height="40" alt="User Image">
                    @wallet.User.UserName
                </td>
                <td><i class="fas fa-dollar-sign"></i> @wallet.Amount</td>
                <td>
                    <a asp-action="GetWalletByID" asp-route-WalletID="@wallet.Id" class="btn btn-info"><i class="fas fa-eye"></i> View</a>
                    <a asp-action="UpdateWallet" asp-route-WalletID="@wallet.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
            <a class="page-link" href="@Url.Action("GetAllWallets", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize, search = Context.Request.Query["search"] })">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("GetAllWallets", new { pageNumber = i, pageSize = Model.PageSize, search = Context.Request.Query["search"] })">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNext ? "" : "disabled")">
            <a class="page-link" href="@Url.Action("GetAllWallets", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize, search = Context.Request.Query["search"] })">Next</a>
        </li>
    </ul>
</nav>
