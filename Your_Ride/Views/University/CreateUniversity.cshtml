@model Your_Ride.ViewModels.University.CreateUniversityVM

<h2 class="text-center"><i class="fa fa-university"></i> Create University</h2>

<div class="d-flex justify-content-center">
    <form asp-action="Create" method="post" class="w-50">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-primary mx-2">
                <i class="fa-solid fa-check"></i> Create
            </button>
            <a asp-action="GetAllUniversity" class="btn btn-secondary mx-2">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>
    </form>
</div>
