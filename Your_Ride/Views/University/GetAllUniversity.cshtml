@model List<Your_Ride.ViewModels.University.UniversityVM>

<h2>Universities</h2>

<a asp-action="Create" class="btn btn-success">Add University</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var university in Model)
        {
            <tr>
                <td>@university.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@university.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@university.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
