@model List<Your_Ride.ViewModels.College.CollegeVM>

@{
    ViewData["Title"] = "All Colleges";
}

<!-- Page Title (Centered) -->
<div class="text-center mb-4">
    <h2 class="text-primary">
        <i class="fa-solid fa-graduation-cap"></i> All Colleges
    </h2>
</div>

<!-- Table Container (Centered & Stretched) -->
<div class="d-flex justify-content-center">
    <div class="w-100">
        <table class="table table-hover shadow-sm text-center">
            <thead class="table-dark">
                <tr>
                    <th><i class="fa-solid fa-graduation-cap"></i> College Name</th>
                    <th><i class="fa fa-university"></i> University</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var college in Model)
                {
                    <tr>
                        <td>@college.Name</td>
                        <td>@college.University?.Name</td>
                        <td>
                            <a asp-action="GetCollegeByID" asp-route-id="@college.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@college.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@college.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Button (Centered & Styled) -->
<div class="text-center mt-3">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="fas fa-plus"></i> Create New College
    </a>
</div>

<!-- FontAwesome CDN (If not already included) -->
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
}
