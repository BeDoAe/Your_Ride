@model IEnumerable<Your_Ride.ViewModels.UserTransactionLogViewModel.UserTransactionLogVM>

<h2>📜 All Transactions</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#️⃣ ID</th>
            <th>👤 User</th>
            <th>📅 Appointment</th>
            <th>⏳ Time</th>
            <th>💰 Amount</th>
            <th>🕒 Transaction Time</th>
            <th>🔧 Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.User?.UserName</td>
                <td>@log.Appointment?.Date.ToShortDateString()</td>
                <td>@log.Time?.TimeOnly - @log.Time.Category</td>
                <td>$@log.WithdrawalAmount</td>
                <td>@log.TransactionTime</td>
                <td>
                    <a asp-action="GetUserTransactionsLogById" asp-route-id="@log.Id" class="btn btn-info">👁 View</a>
                    <a asp-action="DeleteUserTransactionLog" asp-route-id="@log.Id" class="btn btn-danger">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateUserTransactionLog" class="btn btn-success">➕ Create Transaction</a>
