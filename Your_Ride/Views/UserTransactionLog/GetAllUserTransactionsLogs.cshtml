@model IEnumerable<Your_Ride.ViewModels.UserTransactionLogViewModel.UserTransactionLogVM>

<h2>📜 All Transactions</h2>

<div class="search-container">
    <form method="get" action="@Url.Action("GetAllUserTransactionsLogs")">
        <input type="text" name="searchQuery" placeholder="Search..." value="@ViewData["SearchQuery"]" />
        <button type="submit">🔍 Search</button>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#️⃣ ID</th>
            <th>👤 User</th>
            <th>📅 Appointment</th>
            <th>⏳ Time</th>
            <th>💰 Amount</th>
            <th>🕒 Transaction Time</th>
            <th>🔧 Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>
                    <img src="@(!string.IsNullOrEmpty(log.User?.Pic_URL) ? log.User.Pic_URL : "/img/default-profile.png")" alt="User Image" style="width: 30px; height: 30px; border-radius: 50%;" />
                    @log.User?.UserName
                </td>
                <td>@log.Appointment?.Date.ToShortDateString()</td>
                <td>@log.Time?.TimeOnly - @log.Time.Category</td>
                <td>$@log.WithdrawalAmount</td>
                <td>@log.TransactionTime</td>
                <td>
                    <a asp-action="GetUserTransactionsLogById" asp-route-id="@log.Id" class="btn btn-info">👁 View</a>
                    <a asp-action="DeleteUserTransactionLog" asp-route-id="@log.Id" class="btn btn-danger">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div class="pagination-container">
    @if (Model.Any())
    {
        <a href="@Url.Action("GetAllUserTransactionsLogs", new { page = 1, searchQuery = ViewData["SearchQuery"] })">First</a>
        <a href="@Url.Action("GetAllUserTransactionsLogs", new { page = (int)ViewData["CurrentPage"] - 1, searchQuery = ViewData["SearchQuery"] })">Previous</a>
        <a href="@Url.Action("GetAllUserTransactionsLogs", new { page = (int)ViewData["CurrentPage"] + 1, searchQuery = ViewData["SearchQuery"] })">Next</a>
        <a href="@Url.Action("GetAllUserTransactionsLogs", new { page = (int)ViewData["PageCount"], searchQuery = ViewData["SearchQuery"] })">Last</a>
    }
</div>

<a asp-action="CreateUserTransactionLog" class="btn btn-success">➕ Create Transaction</a>
