@model IEnumerable<Your_Ride.ViewModels.UserTransactionLogViewModel.UserTransactionLogVM>

<h2>👤 User Transactions</h2>

@if (!Model.Any())
{
    <p class="alert alert-warning">⚠ No transactions found for this user.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#️⃣ ID</th>
                <th>📅 Appointment</th>
                <th>⏳ Time</th>
                <th>💰 Amount</th>
                <th>🕒 Transaction Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Id</td>
                    <td>@log.Appointment?.Date.ToShortDateString()</td>
                    <td>@log.Time?.TimeOnly</td>
                    <td>$@log.WithdrawalAmount</td>
                    <td>@log.TransactionTime</td>
                </tr>
            }
        </tbody>
    </table>
}
