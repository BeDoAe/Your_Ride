@model Your_Ride.Models.LocationImage

<div class="container mt-5">
    <h2 class="text-center text-danger">🚨 Delete Location Image</h2>
    <hr />

    <p class="text-center">Are you sure you want to delete this location image?</p>

    <div class="text-center">
        <strong>📍 Location:</strong> @Model.Location <br />
        <strong>🆔 Order:</strong> @Model.LocationOrder <br />
        <img src="@Model.ImagePath" alt="Location Image" class="img-fluid mt-3" style="max-width: 300px; border-radius: 10px;" />
    </div>

    <form asp-action="DeleteLocationImage" method="post" class="text-center mt-4">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">🗑️ Confirm Delete</button>
        <a asp-action="GetAllTimes" class="btn btn-secondary">Cancel</a>
    </form>
</div>
