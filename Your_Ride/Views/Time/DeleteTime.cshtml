@model Your_Ride.ViewModels.TimeViewModel.TimeVM

<h2 class="mb-4 text-danger">Delete Time</h2>
<p class="lead">Are you sure you want to delete this time entry?</p>

<table class="table table-bordered">
    <tr><th>Time</th><td>@Model.TimeOnly.ToString("hh:mm tt")</td></tr>
    <tr><th>Appointment Date</th><td>@Model.Appointment?.Date.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>Bus Guide</th><td>@Model.BusGuide?.FirstName @Model.BusGuide?.LastName</td></tr>
    <tr>
        <th>Locations & Images</th>
        <td>
            <ul class="list-unstyled">
                @foreach (var loc in Model.LocationImages)
                {
                    <li class="mb-2">
                        <strong>@loc.Location</strong>
                        <br />
                        <img src="@loc.ImagePath" alt="@loc.Location" class="img-thumbnail" width="120" />
                    </li>
                }
            </ul>
        </td>
    </tr>
</table>

<form asp-action="DeleteTime" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="GetAllTimes" class="btn btn-secondary">Cancel</a>
    </div>
</form>
