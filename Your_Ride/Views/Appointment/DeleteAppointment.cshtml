@model Your_Ride.ViewModels.AppointmentviewModel.AppointmentVM

<h2>Delete Appointment</h2>

<p>Are you sure you want to delete this appointment?</p>

<div>
    <p><strong>Date:</strong> @Model.Date</p>
    <p><strong>Max Amount:</strong> @Model.MaxAmount</p>
@*     <p><strong>Bus Guide:</strong> @(Model.BusGuide != null ? Model.BusGuide.UserName : "Not Assigned")</p>
 *@    @* <p><strong>Completed:</strong> @(Model.HasCompleted ? "Yes" : "No")</p> *@
</div>

<form asp-action="DeleteAppointment" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="GetAllAppointments" class="btn btn-secondary">Cancel</a>
</form>
