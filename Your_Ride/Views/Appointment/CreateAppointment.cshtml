@model Your_Ride.ViewModels.AppointmentviewModel.AppointmentVM
@using Your_Ride.Models
@* 
@{
    var users = ViewBag.Users as List<ApplicationUser>;
} *@

<h2>Create Appointment</h2>

<form asp-action="CreateAppointment" method="post">
    <div class="form-group">
        <label for="Date">Date</label>
        <input asp-for="Date" class="form-control" type="date" id="appointmentDate" @*  value="2025-07-22" min="2018-01-01"   max="2018-12-31" *@ required />
    </div>

    <div class="form-group">
        <label for="MaxAmount">Max Amount</label>
        <input asp-for="MaxAmount" class="form-control" type="number" step="0.01" required />
    </div>

@*     <div class="form-group">
        <label for="BusGuideId">Select Bus Guide</label>
        <select asp-for="BusGuideId" class="form-control">
            <option value="">-- Select Bus Guide --</option>
            @if (users != null)
            {
                @foreach (var user in users)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            }
        </select>
    </div> *@

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="GetAllAppointments" class="btn btn-secondary">Cancel</a>
</form>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var today = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
        var dateInput = document.getElementById("appointmentDate");
        dateInput.min = today; // Set minimum date to today
        dateInput.value = today; // Set default value to today
    });
</script>